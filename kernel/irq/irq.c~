#include "irq.h"
#include "time.h"
#include "sched.h"
#include "string.h"

static void irq_timer()
{
    // TODO clock interrupt handler.
    // scheduler, time counter in here to do, emmmmmm maybe.
    scheduler();
}

void interrupt_helper(uint32_t status, uint32_t cause)
{
    // TODO interrupt handler.
    // Leve3 exception Handler.
    // read CP0 register to analyze the type of interrupt.
    
    //void *p=irq_timer;
    //can not use the reg name directly,$26 for k0,$27 for k1
    asm volatile (
        "mfc0 k0,CP0_CAUSE\n\t"
        "and k0,k0,0x00008000\n\t"
        "or $26,$0,0x00008000\n\t"
        "beq k0,k1,irq_timer\n\t"
    );
    //in fact always jump to irq_timer, because now all interrupts are clock interrupts
}

